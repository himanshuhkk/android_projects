<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F4B250"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bnb0"
                android:tag="0"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:height="60dp"
                android:background="@drawable/custom_button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="1"
                android:id="@+id/bnb1"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:height="60dp"
                android:background="@drawable/custom_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="2"
                android:id="@+id/bnb2"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:height="60dp"
                android:background="@drawable/custom_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="3"
                android:id="@+id/bnb3"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:height="60dp"
                android:background="@drawable/custom_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="4"
                android:height="60dp"
                android:id="@+id/bnb4"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/custom_button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="5"
                android:id="@+id/bnb5"
                android:layout_margin="10dp"
                android:height="60dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/custom_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="6"
                android:id="@+id/bnb6"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:height="60dp"
                android:background="@drawable/custom_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="7"
                android:id="@+id/bnb7"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:height="60dp"
                android:background="@drawable/custom_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="8"
                android:id="@+id/bnb8"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:height="60dp"
                android:background="@drawable/custom_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvpos"
                android:layout_margin="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:id="@+id/bnplay"
                android:background="@drawable/custom"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="play"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/bnreset"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:background="@drawable/custom"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>